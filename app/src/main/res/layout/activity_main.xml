<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#47AD39"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/txtSetsBTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="40dp"
            android:background="#DC0B0B0B"
            android:ellipsize="none"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="___"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/txtScoreB"
            app:layout_constraintTop_toBottomOf="@+id/txtSetsATotal" />

        <TextView
            android:id="@+id/textViewSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/myfont"
            android:text="Score"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPreviusSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/myfont"
            android:text="Sets"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtSetsATotal"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtSetsATotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="40dp"
            android:background="#DC0B0B0B"
            android:ellipsize="none"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="___"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.684"
            app:layout_constraintStart_toEndOf="@+id/txtScoreA"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtScoreA"
            android:layout_width="132dp"
            android:layout_height="68dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="104dp"
            android:background="#DC0B0B0B"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="00"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtScoreB"
            android:layout_width="132dp"
            android:layout_height="68dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:background="#DC0B0B0B"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="00"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtScoreA" />

        <TextView
            android:id="@+id/textViewPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:layout_marginEnd="112dp"
            android:fontFamily="@font/myfont"
            android:text="Points"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="292dp"
            android:fontFamily="@font/myfont"
            android:text="Games"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPointsA"
            android:layout_width="132dp"
            android:layout_height="68dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="324dp"
            android:background="#DC0B0B0B"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="00"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintStart_toEndOf="@+id/txtGamesA"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnPointA"
            android:layout_width="89dp"
            android:layout_height="50dp"
            android:layout_marginTop="332dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#278895"
            android:text="A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnPointB"
            android:layout_width="89dp"
            android:layout_height="50dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#278895"
            android:text="B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPointA" />

        <TextView
            android:id="@+id/txtGamesA"
            android:layout_width="132dp"
            android:layout_height="68dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="52dp"
            android:background="#DC0B0B0B"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="00"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtScoreB" />

        <TextView
            android:id="@+id/txtGamesB"
            android:layout_width="132dp"
            android:layout_height="68dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:background="#DC0B0B0B"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="00"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGamesA" />

        <TextView
            android:id="@+id/txtPointsB"
            android:layout_width="132dp"
            android:layout_height="68dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:background="#DC0B0B0B"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="00"
            android:textColor="#FCFF00"
            android:textSize="48sp"
            app:layout_constraintStart_toEndOf="@+id/txtGamesB"
            app:layout_constraintTop_toBottomOf="@+id/txtPointsA" />

        <RadioGroup
            android:id="@+id/rdGroup"
            android:layout_width="90dp"
            android:layout_height="109dp"
            android:layout_marginBottom="104dp"
            android:background="#70ACADAB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.427"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rd3Sets"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="3" />

            <RadioButton
                android:id="@+id/rd5Sets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5" />
        </RadioGroup>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#278895"
            android:text="btnReset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rdGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>